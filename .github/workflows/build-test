name: .NET

on:
  push:
    branches: [ master ]
  pull_request:
    branches: [ master ]
  workflow_dispatch:

jobs:
  build:

    runs-on: windows-latest
    
    env:
      Solution_Name: Source\MicrowaveNetworks.sln                         # Replace with your solution name, i.e. MyWpfApp.sln.
      Test_Project_Path: Tests\ScatteringParametersTests\ScatteringParametersTests.csproj                 # Replace with the path to your test project, i.e. MyWpfApp.Tests\MyWpfApp.Tests.csproj.
      Actions_Allow_Unsecure_Commands: true # Allows AddPAth and SetEnv commands

    steps:
    - uses: actions/checkout@v2
    - name: Setup .NET
      uses: actions/setup-dotnet@v1
      with:
        dotnet-version: 5.0.x
    - name: Restore dependencies
      run: dotnet restore $env:Solution_Name
    - name: Build
      run: dotnet build --no-restore
    - name: Test
      run: dotnet test $env:Test_Project_Path --no-build --verbosity normal 
